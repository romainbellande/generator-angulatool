{
  "extends": ["xo-space"],
  "rules": {
    "no-useless-call": "warn",
    "no-use-before-define": "off",
    "new-cap": "warn",
    "no-unused-vars": "off",
    "array-callback-return": "off",
    "no-console": ["error", { "allow": ["warn", "error"] }]

  },
  "env": {
    "mocha": true,
    "es6": true
  },
  "globals": {
    "angular": true,
    "expect": true,
    "inject": true,
    "scope": true
  }
}
